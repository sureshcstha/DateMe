@{
}

@model List<Application>

<table class="table table-bordered">
    <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Age</th>
        <th>Phone</th>
        <th>Major</th>
        <th>Creeper and/or Stalker</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FirstName</td>
            <td>@x.LastName</td>
            <td>@x.Age</td>
            <td>@x.PhoneNumber</td>
            <td>@x.Major</td>
            <td>@x.CreeperStalker</td>
            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.ApplicationID">Edit</a></td>
            <td><a class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>
